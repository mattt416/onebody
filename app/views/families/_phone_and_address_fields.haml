.form-group
  = form.label :home_phone
  = form.phone_field :home_phone, class: 'form-control'
= form.fields_for :location, @family.location do |location_form|
  .form-group
    = location_form.label :address1
    = location_form.text_field :address1, class: 'form-control'
  .form-group
    = location_form.label :address2
    = location_form.text_field :address2, class: 'form-control'
  .form-group
    = location_form.label :city, t('families.edit.city_st_zip')
    .row
      .col-sm-4
        = location_form.text_field :city, class: 'form-control inline full-width'
      .col-sm-4
        = location_form.text_field :state, class: 'form-control inline full-width'
      .col-sm-4
        = location_form.text_field :zip, class: 'form-control inline full-width'
  .form-group
    = form.label :country
    %br
    = location_form.country_select :country, { include_blank: true }, class: 'form-control'
